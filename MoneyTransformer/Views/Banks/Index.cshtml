@model IEnumerable<MoneyTransformer.Models.Bank>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var i = 0; 
}
<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>

<script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>

<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" rel="stylesheet" />

<div class="card">
    <div class="card-body">
<h1 class="Admintitl p-4">Manage Banks </h1>

<p class="ps-4">
    <a asp-action="Create"class="btn btn-primary" >Add New Bank</a>
</p>
</div>
<div class="card-body">
<table class="table card-header mt-4" id="example1">
    <thead>
        <tr>
             <th>
               Bank Picture
            </th>
            <th>
                Bank Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descreption)
            </th>
            <th>
                Bank Phone Number
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
                @foreach (var item in Model) {
                    i++;
                    <tr>
                 <td class="border-bottom-0">
                    <img class="img-fluid flex-shrink-0 rounded-circle" style="width:105px;height:87px" src = @Url.Content("~/Images/" + item.Imagepath) asp-append-version="true" >
             </td>
                <td class="border-bottom-0">
                @Html.DisplayFor(modelItem => item.Namee)
            </td>
                <td class="border-bottom-0">
                @Html.DisplayFor(modelItem => item.Descreption)
            </td>
                <td class="border-bottom-0">
                @Html.DisplayFor(modelItem => item.Phonenumber)
            </td>
            
                <td class="border-bottom-0">
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="button" href="#popup@(i)">Delete</a>
                <form asp-action="Delete">
                 
                        <div id="popup@(i)" class="overlay">
                        <div class="popup">
                           <h2>Delete @Html.DisplayFor(modelItem => item.Namee)</h2>
                            <a class="close" href="#">&times;</a>
                            <div class="content">
                                Sure, Do you want to delete the bank ?
                                
                            <input type="submit" value="Delete" class="btn btn-danger" asp-route-id="@item.Id"/> 
                            </div>

                        </div>
                    </div>
                 
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>


<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>

<script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.3/html2pdf.bundle.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js" defer></script>


<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js" defer></script>
<script>
    $(document).ready(function () {
        $('#example1').DataTable({
            dom: 'Bfrtip',
            buttons: [

                //'excelHtml5',

                //'pdfHtml5'
            ]
        });
    });

     $(document).ready(function () {
        $('#example2').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copyHtml5',
                'excelHtml5',
                'csvHtml5',
                'pdfHtml5'
            ]
        });
    });
</script>


