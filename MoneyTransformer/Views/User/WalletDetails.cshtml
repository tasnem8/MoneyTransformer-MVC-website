@model MoneyTransformer.Models.Wallet

@{
    ViewData["Title"] = "WalletDetails";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
   
}

  <!-- Navbar & Hero Start -->
<div class="container-xxl position-relative p-0">

    <div class="container-xxl py-5 bg-primary hero-header mb-5">
        <div class="container  px-lg-5">
            <div class="row g-5 ">
                <div class="col-lg-3 text-center text-lg-start py-5">
                        <img src = @Url.Content("~/Images/" + Model.Bank.Imagepath) asp-append-version="true" class="img-fluid flex-shrink-0 rounded-circle" style="border-style: groove;border-color: white;" />

            @*<img class="img-fluid" src="~/Images/Home2.png"alt="">*@
                </div>
                <div class="col-lg-6 py-5 text-center text-lg-start">

                <h1 class="text-white mb-4 animated zoomIn">Wallet @Html.DisplayFor(model => model.Bank.Namee)</h1>
                  
                <p class="text-white pb-3 animated zoomIn">IBAN :  @((long)Model.Iban)</p>
                <p class="text-white pb-3 animated zoomIn">Balance : @Html.DisplayFor(model => model.Balance) JD</p>
                <p class="text-white pb-3 animated zoomIn">Created :  @Html.DisplayFor(model => model.Datecreate)</p>

                <p class="text-white pb-3 animated zoomIn">@Html.DisplayFor(model => model.Status)</p>

                @if(Model.Status=="Active"){
                    <a href="/User/Transaction" class="btn btn-light py-sm-3 px-sm-5 rounded-pill me-3 animated slideInLeft">Make Transaction</a>
                    <a href="/User/RechangeActivate/@Model.Id" class="btn btn-light py-sm-3 px-sm-5 rounded-pill me-3 animated slideInLeft">Recharge</a>

                }
                else {
                    <a href="/User/RechangeActivate/@Model.Id" class="btn btn-light py-sm-3 px-sm-5 rounded-pill me-3 animated slideInLeft">Activate</a>

                }
        </div>

            </div>
        </div>
    </div>
</div>
