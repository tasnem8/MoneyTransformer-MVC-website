@model MoneyTransformer.Models.Testimonial

@{
    ViewData["Title"] = "AddReview";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

        <!-- Navbar & Hero Start -->
<div class="container-xxl position-relative p-0">


            <div class="container-xxl py-3 bg-primary hero-header mb-5">
                <div class="container my-5 py-5 px-lg-5">
                    <div class="row g-5 py-5">
                        <div class="col-12 text-center">
                            <h1 class="text-white animated zoomIn">Add a Review</h1>
                            <hr class="bg-white mx-auto mt-0" style="width: 90px;">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb justify-content-center">
                                    <li class="breadcrumb-item"><a class="text-white" href="/Home/Index">Home</a></li>
                     
                                    <li class="breadcrumb-item text-white active" aria-current="page">Review</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>        <!-- Navbar & Hero End -->


 <div class="container-xxl ">
    <div class="container px-lg-5">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="section-title  text-center  pb-2 wow fadeInUp" data-wow-delay="0.1s">
                    @if (ViewData["review"]!=null)
                    {
                                <h3 class="position-relative d-inline text-primary " style="background-color: rgba(0,0,0,0.15);">@ViewData["review"]</h3>
                    }
                    <br />
                    <h6 class="position-relative d-inline text-primary ps-4">Write your Experience</h6>
                    @*<h2 class="mt-2">Write your Experience   </h2>*@
                </div>
                <div class="wow fadeInUp" data-wow-delay="0.3s">
                    <form asp-action="AddReview">
                        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                        <div class="col-12">
                        <div class="form-floating">
                            <textarea  asp-for="Text" class="form-control text-dark" value="Write a comment here" id="Text" style="height: 150px"></textarea>
                            <label  asp-for="Text">Text</label>
                            @*<span asp-validation-for="Text" class="text-danger"></span>*@
                        </div>
                        </div>
                    <div class="col-12">
                        <input type="submit" value="Send Review" class="btn btn-primary w-100 py-3 m-1" />
                    </div>
                   
                                
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
$(document).ready(function() {
    // Store initial input field value
    var initialInputValue = $("#Text").val();
    
    // Reset input field value to its initial value
    $("#Text").val(initialInputValue);
});
</script>






