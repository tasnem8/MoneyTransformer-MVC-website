@model MoneyTransformer.Models.Home
@{
    ViewData["Title"] = "ContactDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">
  <div class="container-fluid">
    <div class="card">
       <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">Contact Informations</h5>
         <form  method="POST" asp-controller="Admin" asp-action="ContactDetails" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
           
            <div class="row">
            
            <div class="col-md-4">
               
                <div class="card">


                <div class="card-body">
                 
                    <h5 class="card-title">   <i class="ti ti-brand-facebook"style="font-size:30px"></i> Facebook Link</h5>
                    <p class="card-text">Change</p>
                   @*<label asp-for="Facebooklink" class="control-label"></label>*@
                <input asp-for="Facebooklink" class="form-control" />
                <span asp-validation-for="Facebooklink" class="text-danger"></span>
                </div>
                </div>
            </div>
           <div class="col-md-4">
                <div class="card">


                <div class="card-body">
                    <h5 class="card-title"><i class="ti ti-brand-instagram"style="font-size:30px"></i>Instagram Link</h5>
                    <p class="card-text">Change</p>
                      @*<label asp-for="Instagramlink" class="control-label"></label>*@
                      <input asp-for="Instagramlink" class="form-control" />
                      <span asp-validation-for="Instagramlink" class="text-danger"></span>
                </div>
                </div>
            </div>
            </div>
             <div class="row">
            <div class="col-md-4">
             
                <div class="card">


                <div class="card-body">
                    <h5 class="card-title"><i class="ti ti-phone-call" style="font-size:30px"></i>Phone Number</h5>
                    <p class="card-text">Change</p>
                     
                       <input asp-for="Phonenumber" class="form-control" />
                      <span asp-validation-for="Phonenumber" class="text-danger"></span>
                </div>
                </div>
            </div>
            <div class="col-md-4">
               
                <div class="card">


                <div class="card-body">
                    <h5 class="card-title"><i class="ti ti-mail"style="font-size:30px"></i>Email</h5>
                    <p class="card-text">Change</p>
                
                      <input asp-for="Email" class="form-control" />
                      <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                </div>
            </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
          </form>
       </div>
     </div>
   </div>
</div>

