@model IEnumerable<MoneyTransformer.Models.UserInfoWallet>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" rel="stylesheet" />


<div class="card">
    <div class="card-body ">

        <h1 class="Admintitl" >Registered Users</h1>
    </div>
    <div class="card-body">
<table class="table card-header" id="example1">
    <thead>
        <tr>
             <th>
                Picture
            </th>
            <th>
                User Name
            </th>
            <th>
                Email
            </th>
           <th>
                Number of Created Wallets
            </th>
       
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                      <td class="border-bottom-0">
                             <img src = @Url.Content("~/Images/" + item.useraccount.ImagePath) asp-append-version="true" width="35" height="35" class="rounded-circle">
                    </td>
                <td class="border-bottom-0">
                            @Html.DisplayFor(modelItem => item.useraccount.Fname) @Html.DisplayFor(modelItem => item.useraccount.Lname)
            </td>
                <td class="border-bottom-0">
                            @Html.DisplayFor(modelItem => item.userlogin.Email)
            </td>
                  <td class="border-bottom-0">
                            @Html.DisplayFor(modelItem => item.CountWallet)
                </td>
          
        </tr>
}
    </tbody>
</table>
</div>
</div>

