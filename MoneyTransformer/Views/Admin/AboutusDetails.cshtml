                                        <span asp-validation-for="Text1" class="text-danger"></span>
                                    </div>
                                    
                                <small>CEO</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 wow fadeInUp" data-wow-delay="0.3s">
                        <div class="team-item card-footer">
                            <div class="d-flex">
                               <img src = @Url.Content("~/Images/" + Model.Image2path) asp-append-version="true" class="img-fluid rounded w-100">

                            </div>
                            <div class="form-group">
                                    <label asp-for="ImageFile2" class="control-label">Change Picture</label>
