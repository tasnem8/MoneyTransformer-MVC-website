                                    <span asp-validation-for="ImageFile2" class="text-danger"></span>
                                </div>
                            <div class="px-4 py-3">
                                <div class="form-group">
                                    <label asp-for="Text2" class="control-label">Change Name</label>
                                    <input asp-for="Text2" class="form-control" />
                                    <span asp-validation-for="Text2" class="text-danger"></span>
                                </div>
                                <small>Manager</small>
                            </div>
                        </div>
                    </div>
                     <div class="col-lg-4 wow fadeInUp" data-wow-delay="0.3s">
                        <div class="team-item card-footer">
                            <div class="d-flex">
                               <img src = @Url.Content("~/Images/" + Model.Image3path) asp-append-version="true" class="img-fluid rounded w-100">

                            </div>
                            <div class="form-group">
                                    <label asp-for="ImageFile3" class="control-label">Change Picture</label>
                                    <input asp-for="ImageFile3" class="form-control" />
                                    <span asp-validation-for="ImageFile3" class="text-danger"></span>
                                </div>
                            <div class="px-4 py-3">
                                <div class="form-group">
                                          <label asp-for="Text3" class="control-label"></label>
                                            <input asp-for="Text3" class="form-control" />
                                            <span asp-validation-for="Text3" class="text-danger"></span>
                                </div>
                                <small>Designer</small>
                            </div>
                        </div>
                    </div>
                  
                </div>
                 <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary m-md-4" />
            </div>
       
            </div>
        </div>
        </div>
         </form>
