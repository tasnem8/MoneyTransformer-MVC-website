@model MoneyTransformer.Models.Aboutu

@{
    ViewData["Title"] = "AboutusDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<form  method="POST" asp-action="AboutusDetails" enctype="multipart/form-data">

