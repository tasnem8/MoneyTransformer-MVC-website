                    <h2 class="mt-2">Meet Our Team Members</h2>
                </div>
          
            

                <div class="row g-4">
                    <div class="col-lg-4 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="team-item card-footer">
                          <div class="d-flex">
                               
                           <img src = @Url.Content("~/Images/" + Model.Image1path) asp-append-version="true"  class="img-fluid rounded w-100">
                          
                            </div>
