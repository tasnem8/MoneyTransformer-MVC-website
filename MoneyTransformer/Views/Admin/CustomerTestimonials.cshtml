@model IEnumerable<MoneyTransformer.Models.Testimonial>

@{
    ViewData["Title"] = "CustomerTestimonials";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="~/css/site.css" />

<div class="card">
    <div class="card-body ">

        <h1 class="Admintitl" ><i class="ti ti-file-description"></i>Customer Testimonial</h1>
    </div>
    <div class="card-body">
<form  method="POST"   asp-action="CustomerTestimonials"  id="form1">
       <div class="form-check form-check-inline">
  <input class="form-check-input" type="radio" name="option" id="inlineRadio1" value="option1">
  <label class="form-check-label" for="inlineRadio1">Posted</label>
</div>
<div class="form-check form-check-inline">
  <input class="form-check-input" type="radio" name="option" id="inlineRadio2" value="option2">
  <label class="form-check-label" for="inlineRadio2">Not Posted</label>
</div>
 <input type="submit" value="Result" class="btn btn-primary" />

</form>
<table class="table card-header" id="example1">
    <thead>
        <tr>
            <th>
                Profil Picture
            </th>
            <th>
                Comment
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Comment Date
            </th>
            <th>
                Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               <img src = @Url.Content("~/Images/" + item.User.ImagePath )   width="35" height="35" class="rounded-circle">

           </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TestimonialDate)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.User.Fname)  @Html.DisplayFor(modelItem => item.User.Lname)
            </td>
            <td>
                @*<a asp-action="PostTestimonial" asp-route-id="@item.Id">POST</a> |*@
            @*<form asp-action="CustomerTestimonials">
                 <input type="submit" value="POST" class="btn btn-danger" asp-route-id="@item.Id"/> |
            </form> *@
                    <form asp-action="CustomerTestimonials" id="form2">
                @if(item.Status=="onhold")
                {

                  <input type="submit" value="POST" class="btn btn-pri" asp-route-id="@item.Id" asp-route-f="1"/>
                }
                    | <input type="submit" value="Delete" class="btn btn-danger" asp-route-id="@item.Id"asp-route-f="2"/> 
            </form>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>

